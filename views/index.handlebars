<h1>Code Burgers!</h1>
<h2>Welcome to Code Burgers, home of the Code Burgers, can I take your order?</h2>

<div class="container">
    <img src="/assets/img/burger.png" alt="juicy hamburger">

    <div class="createForm">
        <h4>Add a Burger</h4>
        <form class="create-form">

            <div class="form-group">
                <label for="newName">Burger Name:</label>
                <input type="text" id="newName" name="burgerName">
            </div>

            <div class="form-group">
                <label for="newDescription">Burger Description:</label>
                <input type="text" id="newDescription" name="burgerDes">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>



<div class="grid-container">
    <div class="column1">
        <h3>Delicious Burgers!</h3>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{this.burger_name}}
            <button class="devour" data-id="{{id}}" data-devoured="{{devoured}}">
                DEVOUR
            </button>
            {{this.burger_description}}
            <hr>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="column2">
        <h3>Devoured Burgers!</h3>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{this.burger_name}}
            <button class="makeAnother" data-id="{{id}}" data-devoured="{{devoured}}">
                MAKE ANOTHER
            </button>
            {{this.burger_description}}
            <hr>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>